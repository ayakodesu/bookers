

  <h1>Books</h1>
  
  <table>

  <thead>
    <tr>
      <th>Title</th>

      <th>Body</th>

    </tr>
    
  
  </thead>


  <tbody>

     <% @books.each do |book| %>

  <tr>
    <td><%= book.title  %></td>
    <td><%= book.body %></td>
  </tr>

  


  <% end %>

  </tbody>
  </table>


  





<h2>New book</h2>

<%= form_with model: @book do |f| %>
<div class="field">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :body, "Body" %>
  <%= f.text_area :body %>
</div>
<div class="action">
  <%= f.submit 'Create Book' %>
</div>
<% end %>


